<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".app.home.sections.procedure.ProcedureProcessActivity">

    <com.gkv.newbie.ui.textview.GradientTitle
        android:id="@+id/procedureTitle"
        style="@style/SimpleTitle"
        android:text="Procedures Process"/>

    <com.gkv.newbie.ui.textview.StylishText
        style="@style/SimpleText"
        android:text="Name"/>

    <com.gkv.newbie.ui.textview.GradientTitle
        android:id="@+id/name"
        style="@style/SimpleTitle"
        android:text="Name"/>

    <com.gkv.newbie.ui.textview.StylishText
        style="@style/SimpleText"
        android:text="Owner"/>

    <com.gkv.newbie.ui.textview.GradientTitle
        android:id="@+id/owner"
        style="@style/SimpleTitle"
        android:text="Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ownerControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.gkv.newbie.ui.button.StylishButton
                android:id="@+id/updateProcedureButton"
                android:layout_width="60dp"
                android:drawableLeft="@drawable/pencil"
                style="@style/BlueButton"/>

            <com.gkv.newbie.ui.button.StylishButton
                android:id="@+id/shareProcedureButton"
                android:layout_width="60dp"
                android:drawableLeft="@drawable/share"
                style="@style/BlueButton"/>
        </LinearLayout>

        <com.gkv.newbie.ui.button.StylishButton
            android:id="@+id/openProcessButton"
            android:layout_width="60dp"
            android:drawableLeft="@drawable/outline"
            style="@style/BlueButton"/>

    </LinearLayout>



</LinearLayout>