<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".app.home.sections.procedure.ProcedureGroupActivity">

    <com.gkv.newbie.ui.textview.GradientTitle
        android:id="@+id/procedureTitle"
        style="@style/SimpleTitle"
        android:text="Procedures Group"/>

    <LinearLayout
        android:id="@+id/ownerControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.gkv.newbie.ui.button.StylishButton
            android:id="@+id/updateProcedureButton"
            android:layout_width="60dp"
            android:drawableLeft="@drawable/pencil"
            style="@style/BlueButton"/>

        <com.gkv.newbie.ui.button.StylishButton
            android:id="@+id/shareProcedureButton"
            android:layout_width="60dp"
            android:drawableLeft="@drawable/share"
            style="@style/BlueButton"/>

        <com.gkv.newbie.ui.button.StylishButton
            android:id="@+id/createProcedureButton"
            android:layout_width="60dp"
            android:drawableLeft="@drawable/plus"
            style="@style/BlueButton"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>